<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="50sp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/AccLayout">
    <TextView
        android:layout_width="100sp"
        android:layout_height="wrap_content"
        android:id="@+id/xValue"
        android:textSize="32dp"
        android:layout_gravity = "center"/>

    <TextView
        android:layout_width="100sp"
        android:layout_height="wrap_content"
        android:id="@+id/yValue"
        android:textSize="32dp"
        android:layout_gravity = "center"/>

    <TextView
        android:id="@+id/zValue"
        android:layout_width="100sp"
        android:layout_height="wrap_content"
        android:textSize="32dp"
        android:layout_gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/GyroLayout"
        android:layout_below="@+id/AccLayout"
        android:layout_marginTop="10sp">
        <TextView
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:id="@+id/xGValue"
            android:textSize="32dp"
            android:layout_gravity = "center"/>

        <TextView
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:id="@+id/yGValue"
            android:textSize="32dp"
            android:layout_gravity = "center"/>

        <TextView
            android:id="@+id/zGValue"
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:textSize="32dp"
            android:layout_gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/MagLayout"
        android:layout_below="@+id/AccLayout"
        android:layout_marginTop="10sp">
        <TextView
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:id="@+id/xMValue"
            android:textSize="32dp"
            android:layout_gravity = "center"/>

        <TextView
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:id="@+id/yMValue"
            android:textSize="32dp"
            android:layout_gravity = "center"/>

        <TextView
            android:id="@+id/zMValue"
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:textSize="32dp"
            android:layout_gravity="center"/>

    </LinearLayout>

</LinearLayout>